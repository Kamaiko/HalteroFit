{
  "name": "halterofit",
  "version": "0.1.0",
  "description": "Offline-first fitness tracking app with context-aware analytics. Testing: docs/TESTING.md",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "prepare": "husky"
  },
  "dependencies": {
    "@nozbe/watermelondb": "^0.28.0",
    "@nozbe/with-observables": "^1.6.0",
    "@rn-primitives/label": "^1.2.0",
    "@rn-primitives/portal": "^1.3.0",
    "@rn-primitives/progress": "^1.2.0",
    "@rn-primitives/slot": "^1.2.0",
    "@sentry/react-native": "~6.14.0",
    "@shopify/flash-list": "1.8.3",
    "@shopify/react-native-skia": "v2.0.0-next.4",
    "@supabase/supabase-js": "^2.90.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "expo": "53",
    "expo-asset": "~11.1.7",
    "expo-background-fetch": "~13.1.6",
    "expo-constants": "~17.1.8",
    "expo-dev-client": "~5.2.4",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.1",
    "expo-image-manipulator": "~13.1.7",
    "expo-linear-gradient": "~14.1.5",
    "expo-linking": "~7.1.7",
    "expo-notifications": "^0.31.4",
    "expo-router": "~5.1.10",
    "expo-status-bar": "~2.2.3",
    "nativewind": "^4.2.1",
    "react": "^19.0.3",
    "react-native": "0.79.7",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-mmkv": "^4.1.1",
    "react-native-nitro-modules": "^0.33.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-worklets": "^0.7.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "victory-native": "^41.20.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "30.0.0",
    "@types/pg": "^8.16.0",
    "@types/react": "~19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "babel-preset-expo": "^54.0.7",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jest": "~30.2.0",
    "jest-expo": "~53.0.13",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.7",
    "pg": "^8.16.3",
    "prettier": "^3.7.4",
    "react-test-renderer": "^19.0.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'tsc --noEmit'"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "@babel/runtime": "^7.26.10",
    "@nozbe/with-observables": {
      "react": "$react",
      "@types/react": "$@types/react"
    },
    "react-test-renderer": {
      "react": "$react"
    }
  },
  "private": true
}
