{
  "name": "halterofit",
  "version": "0.1.0",
  "description": "Offline-first fitness tracking app with context-aware analytics. Testing: docs/TESTING.md",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:integration": "jest --config jest.config.integration.ts",
    "test:integration:watch": "jest --config jest.config.integration.ts --watch",
    "prepare": "husky"
  },
  "dependencies": {
    "@nozbe/watermelondb": "^0.28.0",
    "@nozbe/with-observables": "^1.6.0",
    "@rn-primitives/label": "^1.2.0",
    "@rn-primitives/portal": "^1.3.0",
    "@rn-primitives/progress": "^1.2.0",
    "@rn-primitives/slot": "^1.2.0",
    "@sentry/react-native": "~7.8.0",
    "@shopify/flash-list": "2.2.0",
    "@shopify/react-native-skia": "2.4.14",
    "@supabase/supabase-js": "^2.89.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "expo": "54.0.30",
    "expo-asset": "^12.0.10",
    "expo-background-fetch": "^14.0.9",
    "expo-constants": "~18.0.10",
    "expo-dev-client": "^6.0.20",
    "expo-haptics": "^15.0.8",
    "expo-image": "^3.0.11",
    "expo-image-manipulator": "^14.0.8",
    "expo-linear-gradient": "^15.0.8",
    "expo-linking": "^8.0.11",
    "expo-notifications": "^0.32.15",
    "expo-router": "~6.0.21",
    "expo-status-bar": "~3.0.9",
    "nativewind": "^4.2.1",
    "react": "19.2.3",
    "react-native": "0.81.5",
    "react-native-css-interop": "^0.2.1",
    "react-native-gesture-handler": "^2.30.0",
    "react-native-mmkv": "^4.1.0",
    "react-native-nitro-modules": "^0.31.10",
    "react-native-reanimated": "^4.1.5",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.19.0",
    "react-native-skia": "^0.0.1",
    "react-native-svg": "15.15.1",
    "simple-statistics": "^7.8.8",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "victory-native": "^41.20.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "30.0.0",
    "@types/pg": "^8.16.0",
    "@types/react": "~19.2.7",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.46.3",
    "babel-preset-expo": "^54.0.7",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jest": "~30.2.0",
    "jest-expo": "~54.0.16",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.4",
    "pg": "^8.16.3",
    "prettier": "^3.7.4",
    "react-native-worklets": "0.7.1",
    "react-test-renderer": "^19.2.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "zod": "^4.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'tsc --noEmit'"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "@babel/runtime": "^7.26.10",
    "@nozbe/with-observables": {
      "react": "$react",
      "@types/react": "$@types/react"
    }
  },
  "private": true
}
